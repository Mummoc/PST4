<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConnectActivity"
    android:background="@drawable/gradient_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/reg_screen"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/grad_bgrd1"
            android:text="Create your Account"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/reg_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/grad_bgrd1">

        <ImageView
        android:id="@+id/user_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
            android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/login_photo"/>

        <EditText
            android:hint="Eg: Marie"
            android:id="@+id/user_FN"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/user_img"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edtext_bgd"
            android:ems="10"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_img"
            android:layout_alignStart="@id/user_FN"
            android:layout_alignLeft="@id/user_FN"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="FirstName"/>


        <EditText
            android:hint="Eg: Roger"
            android:id="@+id/user_LN"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/user_FN"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edtext_bgd"
            android:ems="10"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_FN"
            android:layout_alignStart="@id/user_LN"
            android:layout_alignLeft="@id/user_LN"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="LastName"/>


        <EditText
            android:hint="Eg:marieroger@gmal.com"
            android:id="@+id/user_mail"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/user_LN"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edtext_bgd"
            android:ems="10"
            android:inputType="textEmailAddress" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_LN"
            android:layout_alignStart="@id/user_mail"
            android:layout_alignLeft="@id/user_mail"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Email"/>


        <EditText
            android:hint="Password"
            android:id="@+id/user_pwd"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/user_mail"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edtext_bgd"
            android:ems="10"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_mail"
            android:layout_alignStart="@id/user_pwd"
            android:layout_alignLeft="@id/user_pwd"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Password"/>


        <EditText
            android:hint="Password"
            android:id="@+id/user_Cpwd"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/user_pwd"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edtext_bgd"
            android:ems="10"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_pwd"
            android:layout_alignStart="@id/user_Cpwd"
            android:layout_alignLeft="@id/user_Cpwd"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Confirm Password"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reg_screen">


        <Button
            android:id="@+id/crate"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/button_background"
            android:text="Create"
            android:textColor="@color/black" />
    </RelativeLayout>


</RelativeLayout>